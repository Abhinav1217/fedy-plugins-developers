{
	"icon": "utilities-terminal",
	"label": "Xterm",
	"description": "Standard terminal emulator for the X Window System",
	"category": "Apps",
	"scripts": {
		"exec": {
			"label": "Install",
			"script": "run-as-root yum -y install xterm"
		},
		"undo": {
			"label": "Uninstall",
			"script": "run-as-root yum -y --setopt clean_requirements_on_remove=1 erase xterm"
		},
		"status": { "script": "rpm --quiet --query xterm" }
	}
}
